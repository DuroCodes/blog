---
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import Body from '@components/Body.astro';
import Content from '@components/Content.astro';

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, heroImage },
} = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <Body>
    <Header />
    <main class='pt-[56px]'>
      <Content className='pt-6'>
        <div class='mb-8'>
          {
            heroImage && (
              <img
                class='border border-slate-300 dark:border-slate-700 rounded-xl'
                width={720}
                aspect-ratio={2}
                src={heroImage}
                alt=''
              />
            )
          }
        </div>
        <h1 class='text-3xl my-1'>{title}</h1>
        <div>{description}</div>
        <hr class='border-top border-slate-400 my-4' />
        <slot />
        <span
          class='underline underline-offfset-2 hover:text-indigo-500 decoration-indigo-500 text-2xl'
        ></span>
      </Content>
    </main>
    <Footer />
  </Body>
</html>
